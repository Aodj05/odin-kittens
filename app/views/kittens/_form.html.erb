<%= form_with(model: kitten) do |form| %>
  <% if kitten.errors.any? %>
    <div id="error_explination">
      <h2><%= pluralize(kitten.errors.count, "error") %> Kitten could not be saved:</h2>

      <ul>
      
        <% kitten.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :cuteness %>
    <%= form.number_field :cuteness %>
  </div>

  <div class="field">
    <%= form.label :softness %>
    <%= form.number_field :softness %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
  